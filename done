with w2 as (SELECT round(avg(price), 2)
            FROM   products)
SELECT product_id,
       name,
       price,
       case when price >= (SELECT*
                    FROM   w2)+50 then price*0.85 when price <= (SELECT*
                                             FROM   w2)-50 then price*0.90 else price end as new_price
FROM   products
ORDER BY price desc, product_id
